<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/story_bg">

    <ListView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/story_list" android:divider="@color/story_divider" android:fastScrollEnabled="true"></ListView>
    <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/story_list_empty" android:text="@string/no_period_data" android:visibility="invisible"></TextView>

</LinearLayout>